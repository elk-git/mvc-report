{% extends 'base.html.twig' %}

{% block body %}
<div class="example-wrapper">
    <h1>Book Details</h1>
    {% if book %}
        <div class="book">
            <h2>{{ book.title }}</h2>
            <p><strong>FÃ¶rfattare:</strong> {{ book.author }}</p>
            <p><strong>ISBN:</strong> {{ book.isbn }}</p>
            {% if book.img %}
                <img src="{{ book.img }}" alt="bok" class="bok" style="width: 200px; height: 300px;">
            {% endif %}
        </div>
        <div style="display: flex; flex-direction: column; gap: 4px;">
        <a href="{{ path('library_form_edit', {'isbn': book.isbn}) }}">Redigera bok</a>
        <a href="{{ path('library_form_delete', {'isbn': book.isbn}) }}">Ta bort bok</a>
        </div>
    {% else %}
        <p>No book found with the provided ISBN.</p>
    {% endif %}
    <br>
    <br>
    <br>
    <a href="{{ path('library_all') }}">Tillbaka</a>
</div>
{% endblock %}
