{% extends 'base.html.twig' %}

{% block body %}

<div class="example-wrapper">
    <h1>Välkommen till biblioteket</h1>
    <p>Här visas samtliga böcker, klicka på en bok för att se mer specifierad information om boken.</p>
    <table id="books">
        <tr>
            <th>Titel</th>
            <th>Författare</th>

        </tr>
        {% for book in books %}
            <tr onclick="window.location.href='{{ path('library_show', {'isbn': book.isbn}) }}'">
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
            </tr>
        {% endfor %}
    </table>

    <a href="{{ path('library_form_add') }}">Lägg till bok</a>
</div>
{% endblock %}
